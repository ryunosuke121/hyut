{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hyut",
  "version": "0.1.0",
  "identifier": "com.ryunosukeito.hyut",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "hyut",
        "width": 900,
        "height": 700,
        "minWidth": 500,
        "minHeight": 400,
        "resizable": true,
        "center": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "trafficLightPosition": { "x": 8, "y": 12 },
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
